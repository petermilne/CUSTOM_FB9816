# define a single value for FB

# user sets this value
#

# 0 -> 0
# 256 -> 1.0
# 2560-> 10.0
# 1/256 = 0.00390625
# 1/256/65536 = 5.9604644e-8                 # scale to 32 bit
# send RVAL to target

record(ao, "${UUT}:${SITE}:GAIN:${CH}") {
	field(DTYP, "Raw Soft Channel")
	field(OUT,  "${UUT}:${SITE}:GAIN:${CH}:raw")
	field(FLNK, "${UUT}:${SITE}:GAIN:${CH}:raw")
	#field(ESLO, "0.00390625")
	field(ESLO, "5.9604644e-8")
	field(EOFF, "0")
	field(LINR, "SLOPE")
	field(DRVH, "127")
	field(DRVL, "-127")
	field(HOPR, "120")
	field(LOPR, "-120")
	field(DESC, "GAIN for ${CH}")
	field(PINI, "YES")
}

# physical output

record (longout, "${UUT}:${SITE}:GAIN:${CH}:raw") {
	field(DTYP, "stream")
	field(OUT,  "@fb3232.proto setFun(m,${CH}) ${SPORT}")
}



# 10/0x7f00 = 0.0003070578
# 10/0x7f00/65536 = 4.6932791e-9            # scale to 32 bit
record(ao, "${UUT}:${SITE}:OFFSET:${CH}") {
	field(DTYP, "Raw Soft Channel")
	field(OUT,  "${UUT}:${SITE}:OFFSET:${CH}:raw")
	field(FLNK, "${UUT}:${SITE}:OFFSET:${CH}:raw")
	#field(ESLO, "0.000307579")
	field(ESLO, "4.6932791e-9")
	field(EOFF, "0")
	field(LINR, "SLOPE")
	field(DRVH, "10")
	field(DRVL, "-10")
	field(HOPR, "10")
	field(LOPR, "-10")
	field(DESC, "OFFSET for ${CH}")
	field(PINI, "YES")
	field(EGU, "V")
}

# physical output

record (longout, "${UUT}:${SITE}:OFFSET:${CH}:raw") {
	field(DTYP, "stream")
    field(OUT,  "@fb3232.proto setFun(c,${CH}) ${SPORT}")
}


